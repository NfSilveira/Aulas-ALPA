#include <stdio.h>
#include <stdlib.h>


void ex1() {
  int numA, numB;

  printf("1) Digite dois n%cmeros no formato NumeroA, NumeroB: ", 163);
  scanf("%d, %d", &numA, &numB);

  if (numA > numB) {
    printf("O n%cmero maior %c %d.\n\n", 163, 130, numA);
  }

  else {
    printf("O n%cmero maior %c %d.\n\n", 163, 130, numB);
  }
}

void ex2() {
  int SenhaVal = 1234, SenhaDig;

  printf("2) Digite a senha: ");
  scanf("%d", &SenhaDig);

  if (SenhaDig == SenhaVal) {
    printf("Acesso Permitido!\n\n");
  }

  else {
    printf("Acesso Negado.\n\n");
  }
}

void ex3() {
  int num1, num2, num3;

  printf("3) Digite tr%cs n%cmeros, no formato Numero1, Numero2, Numero3: ", 136, 163);
  scanf("%d, %d, %d", &num1, &num2, &num3);

  if (num1 > num2 && num1 > num3) {
    printf("O n%cmero maior %c %d.\n\n", 163, 130, num1);
  }

  else if (num2 > num1 && num2 > num3) {
    printf("O n%cmero maior %c %d.\n\n", 163, 130, num2);
  }

  else {
    printf("O n%cmero maior %c %d.\n\n", 163, 130, num3);
  }
}

void ex4() {
  int AnoAt, AnoNasc;

  printf("4) Digite o ano atual: ");
  scanf("%d", &AnoAt);

  printf("Digite o seu ano de nascimento: ");
  scanf("%d", &AnoNasc);

  if (AnoAt - AnoNasc >= 18) {
    printf("Voc%c pode votar esse ano!", 136);
  }

  else {
    printf("Voc%c n%co pode votar esse ano.", 136, 198);
  }
}

void main() {
  ex1();
  ex2();
  ex3();
  ex4();
}
